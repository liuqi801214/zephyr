config COUNTER_TIMER_RTL8752H
	bool "RTL8752H timer counter driver"
	default y
	depends on DT_HAS_REALTEK_RTL8752H_TIMER_ENABLED
	select USE_HAL_REALTEK_TIM
	select USE_HAL_REALTEK_ENHTIM
	help
	  Enable the RTL8752H counter timer driver.
